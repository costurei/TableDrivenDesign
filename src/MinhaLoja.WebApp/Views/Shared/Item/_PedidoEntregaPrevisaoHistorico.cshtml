@model MinhaLoja.Models.PedidoEntregaPrevisaoHistorico

@{
    var parent = (string?)ViewData["Parent"];
}

<dl class="row">
    <dt class="col-sm-4 col-md-3">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-8 col-md-9">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-4 col-md-3">
        @Html.DisplayNameFor(model => model.Pedido.Cliente)
    </dt>
    <dd class="col-sm-8 col-md-9">
        <a asp-area="Cadastro" asp-controller="Clientes" asp-action="Details" asp-route-id="@Model.Pedido.ClienteId">
            @Html.DisplayFor(model => model.Pedido.Cliente.Nome)
            <i class="bi bi-link-45deg"></i>
        </a>
    </dd>
    <dt class="col-sm-4 col-md-3">
        @Html.DisplayNameFor(model => model.Pedido)
    </dt>
    <dd class="col-sm-8 col-md-9">
        <a asp-area="" asp-controller="Pedidos" asp-action="Details" asp-route-id="@Model.PedidoId">
            @Html.DisplayFor(model => model.Pedido.Descricao)
            <i class="bi bi-link-45deg"></i>
        </a>
    </dd>
    <dt class="col-sm-4 col-md-3">
        @Html.DisplayNameFor(model => model.Data)
    </dt>
    <dd class="col-sm-8 col-md-9">
        @Html.DisplayFor(model => model.Data)
    </dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-parent="@parent" asp-route-from="Details">Editar<i class="bi bi-pencil-square"></i></a>
    <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-parent="@parent" asp-route-from="Details" class="link-danger">Excluir<i class="bi bi-trash"></i></a>
</p>
