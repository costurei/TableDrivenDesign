@model IEnumerable<MinhaLoja.Models.ServicoPrecoHistorico>

@{
    var parent = (string?)ViewData["Parent"];
}

<div class="row table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                @if (parent != "Servico")
                {
                    <th>
                        @Html.DisplayNameFor(model => model.Servico)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        <a asp-area="" asp-controller="ServicoPrecoHistoricos" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-link-45deg"></i></a>
                        <a asp-area="" asp-controller="ServicoPrecoHistoricos" asp-action="Edit" asp-route-id="@item.Id" asp-route-parent="@parent"><i class="bi bi-pencil"></i></a>
                        <a asp-area="" asp-controller="ServicoPrecoHistoricos" asp-action="Delete" asp-route-id="@item.Id" asp-route-parent="@parent" class="link-danger"><i class="bi bi-trash"></i></a>
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Id)
                    </th>
                    @if (parent != "Servico")
                    {
                        <td>
                            <a asp-area="" asp-controller="Servicos" asp-action="Details" asp-route-id="@item.ServicoId">
                                @Html.DisplayFor(modelItem => item.Servico.Descricao)
                                <i class="bi bi-link-45deg"></i>
                            </a>
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
